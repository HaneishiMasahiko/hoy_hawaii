# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# 以下にアプリケーションのルーティングを記述する
GET     /                                       controllers.DataController.login
POST    /login                                  controllers.DataController.authenticate
GET     /logout                                 controllers.DataController.logout
GET     /admin/student_list                     controllers.DataController.student_list
GET     /admin/teacher_list                     controllers.DataController.teacher_list
POST    /admin/signup                           controllers.DataController.signup
GET     /admin/fetch/:id                        controllers.DataController.fetch(id: String)
POST    /admin/edit/:id                         controllers.DataController.edit(id: String)

# Map static resources from the /public folder to the /assets URL path
GET     /robot.txt                              controllers.Default.notFound
GET     /favicon.ico                            controllers.Assets.at(path="/public/images", file="favicon.png")
GET     /assets/*file                           controllers.Assets.versioned(path="/public", file: Asset)
